{% extends '@layout/default.html.twig' %}

{% block content %}
    <section class="my-9 border border-slate-200 rounded-md gap-x-4 max-w-3xl shadow-lg shadow-slate-300/50">
        <div class="mx-5 my-4 p-2">
            <h1 class="text-3xl my-2 font-bold">PHP Memcached Extension Support Checker</h1>
        </div>
        <div class="p-8 flex flex-col bg-right-bottom bg-no-repeat bg-origin-content bg-white">
            <div class="w-full mb-4">
                <h2 class="text-2xl mt-2 mb-6 font-semibold">Memcache server details:</h2>
                <table class="table-auto border-collapse border-1 border-slate-200 w-full ">
                    <thead>
                    <tr class="bg-slate-50">
                        <th class="text-left py-4 px-6 border-b-2 border-slate-100 text-slate-700/85">Server</th>
                        <th class="text-left py-4 px-6 border-b-2 border-slate-100 text-slate-700/85">Version</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for server, version in memcached_version %}
                        <tr>
                            <td class="py-4 px-6 text-slate-700/85">{{ server }}</td>
                            <td class="py-4 px-6 text-slate-700/85">{{ version }}</td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
            <hr class="my-6 border border-slate-100 drop-shadow mx-auto w-1/2">
            <div class="w-full">
                <h2 class="text-2xl mt-2 mb-6 font-semibold">Memcache extension checks:</h2>
                <ul class="text-base/7 list-inside ml-1">
                    <li class="bg-[url(/img/{{ extension_loaded ? 'success' : 'failure' }}.png)] bg-no-repeat pl-10 flex flex-row justify-start self-center my-3">
                        <a href="https://www.php.net/manual/en/intro.memcached.php" target="_blank" class="underline underline-offset-3 decoration-2 decoration-sky-100 hover:decoration-sky-300 transition delay-150 ease-in-out duration-200 text-sky-600">Memcached extension</a>&nbsp;available
                    </li>
                    <li class="bg-[url(/img/{{ cleared ? 'success' : 'failure' }}.png)] bg-no-repeat pl-10 flex flex-row justify-start self-center my-3">
                        Can clear the cache
                    </li>
                    <li class="bg-[url(/img/{{ set ? 'success' : 'failure' }}.png)] bg-no-repeat pl-10 flex flex-row justify-start self-center my-3">
                        Set item in the cache
                    </li>
                    <li class="bg-[url(/img/{{ get ? 'success' : 'failure' }}.png)] bg-no-repeat pl-10 flex flex-row justify-start self-center my-3">
                        Retrieved item from the cache
                    </li>
                </ul>
            </div>
        </div>
    </section>
{% endblock %}
